{
  "compilerOptions": {
    "outDir": "typings",
    "rootDirs": ["src"],
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "target": "es2015",
    "strict": false,
    "lib": ["es2015", "dom"],
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": ["./node_modules/@types", "./src"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["webpack.config.js","jest.config.js", "src/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "typings"]
}