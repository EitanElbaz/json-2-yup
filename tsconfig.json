{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noEmit": true,
  },
  "exclude": ["node_modules"],
  "types": [
    "node",
    "jest"
  ],
  "typeRoots": ["./node_modules/@types", "./src"]
}